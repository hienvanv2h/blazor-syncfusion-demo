@page "/multiselect-dropdown"

<PageTitle>Multiselect Dropdown - Example</PageTitle>

<h3>Multiselect Dropdown</h3>
<hr/>

<div class="col-4 mx-auto">
	<h4>Box Mode (Default)</h4>
    <SfMultiSelect TValue="string[]" TItem="Game" DataSource="@GameList" Placeholder="Chọn môn thể thao yêu thích">
        <MultiSelectFieldSettings Text="Name" Value="ID"></MultiSelectFieldSettings>
    </SfMultiSelect>
</div>

<div class="col-4 mx-auto mt-4">
    <h4>Checkbox Mode</h4>
    <SfMultiSelect TValue="string[]" TItem="Game" DataSource="@GameList" Placeholder="Chọn môn thể thao yêu thích"
            Mode="VisualMode.CheckBox">
        <MultiSelectFieldSettings Text="Name" Value="ID"></MultiSelectFieldSettings>
    </SfMultiSelect>
</div>

<div class="col-4 mx-auto mt-4">
    <h4>Reorder</h4>
    <SfMultiSelect TValue="string[]" TItem="Game" DataSource="@GameList" Placeholder="Chọn môn thể thao yêu thích"
                   Mode="VisualMode.CheckBox" 
                   EnableSelectionOrder="false">
        <MultiSelectFieldSettings Text="Name" Value="ID"></MultiSelectFieldSettings>
    </SfMultiSelect>
</div>

<div class="col-4 mx-auto mt-4">
    <h4>Enable Select All Options</h4>
    <SfMultiSelect TValue="string[]" TItem="Game" DataSource="@GameList" Placeholder="Chọn môn thể thao yêu thích"
                   Mode="VisualMode.CheckBox" 
                   EnableSelectionOrder="false" 
                   ShowSelectAll="true" SelectAllText="Chọn tất cả" UnSelectAllText="Hủy chọn tất cả">
        <MultiSelectFieldSettings Text="Name" Value="ID"></MultiSelectFieldSettings>
    </SfMultiSelect>
</div>

