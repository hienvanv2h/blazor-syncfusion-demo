@page "/dropdown-list"

<PageTitle>Dropdown List - Example</PageTitle>

<h3>Dropdown List</h3>
<SfDropDownList TValue="string" TItem="Game" DataSource="@GameList" Placeholder="Select a game">
	<DropDownListFieldSettings Value="ID" Text="Name"></DropDownListFieldSettings>
</SfDropDownList>

<h3>Dropdown List - Tùy chỉnh kích thước</h3>
<SfDropDownList TValue="string" TItem="Game" DataSource="@GameList" Placeholder="Select a game"
                PopupWidth="600px" PopupHeight="500px" Width="400px">
    <DropDownListFieldSettings Value="ID" Text="Name"></DropDownListFieldSettings>
</SfDropDownList>

<h3>Dropdown List - Bind giá trị</h3>
<div class="col-3 mx-auto">
    <SfDropDownList TValue="string" TItem="Game" DataSource="@GameList" Placeholder="Select a game"
                    PopupWidth="600px" PopupHeight="500px">
        <DropDownListEvents TValue="string" TItem="Game" ValueChange="OnValueChange"></DropDownListEvents>
        <DropDownListFieldSettings Value="ID" Text="Name"></DropDownListFieldSettings>
    </SfDropDownList>
    <p class="mt-4">Game ID: @SelectedGameId</p>
    <p class="mt-4">Game Data: @(Data?.ToString() ?? string.Empty)</p>
</div>

@code {
    public string SelectedGameId  = string.Empty;
    public Game? Data;

    List<Game> GameList = new List<Game>
    {
        new Game() { ID= "Game1", Name= "American Football" },
        new Game() { ID= "Game2", Name= "Badminton" },
        new Game() { ID= "Game3", Name= "Basketball" },
        new Game() { ID= "Game4", Name= "Cricket" },
        new Game() { ID= "Game5", Name= "Football" },
        new Game() { ID= "Game6", Name= "Golf" },
        new Game() { ID= "Game7", Name= "Hockey" },
        new Game() { ID= "Game8", Name= "Rugby"},
        new Game() { ID= "Game9", Name= "Snooker" },
        new Game() { ID= "Game10", Name= "Tennis"},
    };

    public void OnValueChange(ChangeEventArgs<string, Game> args)
    {
        SelectedGameId = args.Value;
        Data = args.ItemData;
    }
}
