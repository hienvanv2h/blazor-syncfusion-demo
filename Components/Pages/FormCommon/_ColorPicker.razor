	<div class="d-flex flex-column gap-4 justify-content-between mt-4">
		<label>Màu đã chọn: </label>
		<div id="preview" style="@PreviewStyle"></div>
		<SfColorPicker Value="@DefaultColor" Mode="ColorPickerMode.Palette" ValueChange="OnColorChange"></SfColorPicker>
	</div>
</div>

@code {
	public string DefaultColor = "#008000";
	public string PreviewStyle = "background-color: #008000;";

	public HexColorValue ColorValue { get; set; }

	public void OnColorChange(ColorPickerEventArgs args)
	{
		ColorValue = new HexColorValue { Hex = args.CurrentValue.Hex };
		PreviewStyle = $"background-color: {ColorValue.Hex}";
	}

	public class HexColorValue {
		public string Hex { get; set; }
	}
}

