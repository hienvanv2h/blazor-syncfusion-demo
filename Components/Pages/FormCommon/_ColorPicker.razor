<h3>Color Picker</h3>
<hr/>

<div class="w-100">
	<div class="d-flex gap-4 justify-content-between align-items-center w-25">
		<label>Picker Mode on open (Default)</label>
		<SfColorPicker Value="@DefaultColor"></SfColorPicker>
	</div>

	<div class="d-flex gap-4 justify-content-between align-items-center w-25">
		<label>Pallete Mode on open</label>
		<SfColorPicker Value="@DefaultColor" Mode="ColorPickerMode.Palette"></SfColorPicker>
	</div>

