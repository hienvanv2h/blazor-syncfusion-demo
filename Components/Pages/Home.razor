@page "/"

<PageTitle>Danh sách nhân viên</PageTitle>

<SfGrid DataSource="@Employees" AllowPaging="true" AllowSorting="true" AllowFiltering="true">
    <GridPageSettings PageSize="5"></GridPageSettings>
    <GridColumns>
        <GridColumn Field=@nameof(Employee.EmployeeId) HeaderText="ID" TextAlign="TextAlign.Center" Width="100" IsPrimaryKey="true"></GridColumn>
        <GridColumn Field=@nameof(Employee.Name) HeaderText="Tên nhân viên" TextAlign="TextAlign.Center" Width="150"></GridColumn>
        <GridColumn HeaderText="Ảnh đại diện" Width="150">
            <Template>
                @{
                    var employee = (context as Employee);
                }
                <img src="@employee.AvatarUrl" alt="Avatar" style="height:50px; width:50px; border-radius:50%; object-fit:cover;" />
            </Template>
        </GridColumn>
        <GridColumn Field=@nameof(Employee.Position) HeaderText="Vị trí" TextAlign="TextAlign.Center" Width="150"></GridColumn>
        <GridColumn Field=@nameof(Employee.Department) HeaderText="Phòng ban" TextAlign="TextAlign.Center" Width="150"></GridColumn>
        <GridColumn Field=@nameof(Employee.HireDate) HeaderText="Ngày gia nhập" TextAlign="TextAlign.Center" Width="150" Format="dd/MM/yyyy"></GridColumn>
        <GridColumn Field=@nameof(Employee.Salary) HeaderText="Mức lương (USD)" TextAlign="TextAlign.Center" Width="150"></GridColumn>
    </GridColumns>
</SfGrid>

